[alias]
  st = status
  merge-log = !sh -c 'git merge && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
  fetch-all = !sh -c 'git fetch --all && git fetch --tags'
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = vim
  autocrlf = false
[github]
  user = noonat
[merge]
  defaultToUpstream = true
[remote "origin"]
  push = HEAD
  tagopt = --all --tags
[push]
  default = current
[user]
  name = Nathan Ostgard
  email = noonat@phuce.com
